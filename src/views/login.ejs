<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Login</h1>
          <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

          <%- include('includes/messages')%>

          <div class="row">
            <div class="col-lg text-center my-5"><h4>Faça seu cadastro</h4>
            
              <form class="form-cadastro" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                <div class="mb-3">
                  <label>Seu email</label>
                  <input type="email" class="form-control validar" name="email">
                </div>

                <div class="mb-3">
                  <label>Sua senha</label>
                  <input type="password" class="form-control validar" name="password">
                </div>

                <button type="submit" class="btn btn-primary">Cadastrar</button>
              </form>

            </div>
            <div class="col-lg text-center my-5">
              <h4>Faça seu login</h4>
              
              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                <div class="mb-3">
                  <label>Seu email</label>
                  <input type="email" class="form-control validar" name="email">
                </div>

                <div class="mb-3">
                  <label>Sua senha</label>
                  <input type="password" class="form-control validar" name="password">
                </div>

                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          </div>

        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>
    <%- include('includes/footer') %>
    